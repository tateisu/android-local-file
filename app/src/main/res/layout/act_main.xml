<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="jp.juggler.testsaf.ActMain"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideOverlay"
    android:fadeScrollbars="false"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        style="@style/setting_caption"
        android:text="please select Primary Storage"
        />

    <LinearLayout style="@style/setting_row">

        <TextView
            android:id="@+id/tvPrimaryStorage"
            style="@style/setting_row_stretch"
            />

        <Button
            android:id="@+id/btnPrimaryStorage"
            style="@style/setting_picker_button"
            />
    </LinearLayout>

    <View style="@style/setting_divider"/>

    <TextView
        style="@style/setting_caption"
        android:text="please select non-Primary Storage"
        />

    <LinearLayout style="@style/setting_row">

        <TextView
            android:id="@+id/tvSecondaryStorage"
            style="@style/setting_row_stretch"
            />

        <Button
            android:id="@+id/btnSecondaryStorage"
            style="@style/setting_picker_button"
            />
    </LinearLayout>

    <View style="@style/setting_divider"/>


    <TextView
        style="@style/setting_caption"
        android:text="share file from"
        />

    <LinearLayout style="@style/setting_row">

        <Spinner
            android:id="@+id/spShareFrom"
            style="@style/setting_row_stretch"
            />
    </LinearLayout>

    <View style="@style/setting_divider"/>


    <TextView
        style="@style/setting_caption"
        android:text="share uri type"
        />

    <LinearLayout style="@style/setting_row">

        <Spinner
            android:id="@+id/spShareUriType"
            style="@style/setting_row_stretch"
            />

    </LinearLayout>

    <View style="@style/setting_divider"/>
    <TextView
        style="@style/setting_caption"
        android:text="share test"
        />

    <LinearLayout style="@style/setting_row">

        <Button
            android:id="@+id/btnShare"
            style="@style/setting_row_stretch"
            android:text="share"
            />

    </LinearLayout>

    <View style="@style/setting_divider"/>
    <TextView
        style="@style/setting_caption"
        android:text="last share uri"
        />

    <LinearLayout style="@style/setting_row">

        <TextView
            android:id="@+id/tvLastShare"
            style="@style/setting_row_stretch"
            />

    </LinearLayout>
